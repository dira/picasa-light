.navigation
  %a{ :href => '/' } home
  \/
  %a{ :href => user_url(params[:username]) }
    ="#{h @album[:author]}"

%h1
  =h @album[:title]
- max = 512
%ol.photos
  - @album[:photos].each do |photo|
    %li
      %a{ :name => photo[:id] }
      - size = PicasaAPI::photo_size(photo, max)
      %img{ :src => PicasaAPI::photo_with_size(photo[:src], max), :alt => photo[:title], :width => size[:width], :height => size[:height] }
      %div.meta
        - unless photo[:description].empty?
          %p= auto_link_urls(h photo[:description])
        %p.time
          = photo[:time].strftime("%B %d, %Y")

.navigation
  You can view this album on
  %a{ :href => @album[:link] } Picasa
.navigation
  %a{ :href => '/' } home
  \/
  %a{ :href => user_url(params[:username]) }
    ="#{h @album[:author]}"
  = "/ #{h @album[:title]}"
